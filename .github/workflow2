name: CWE Filter CI2

on:
  workflow_dispatch:
    inputs:
      languages:
        description: 'Comma-separated programming languages (e.g. Java,Python,C#)'
        required: true
        default: 'Java,Python'
      mode:
        description: 'Filter mode (or/and)'
        required: true
        default: 'or'

jobs:
  filter-cwe:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.10'

      - name: Install dependencies
        run: pip install -r requirements.txt

      - name: Build filtered_cwe output filename
        id: fname
        run: |
          LANGS=$(echo "${{ github.event.inputs.languages }}" | tr '[:upper:]' '[:lower:]' | tr ',' ' ')
          ARR=($LANGS)
          N=${#ARR[@]}
          if [[ $N -gt 1 ]]; then
            MODE="${{ github.event.inputs.mode }}"
            MODE="_${MODE}_"
            OUTNAME="filtered_cwe_${ARR[0]}${MODE}${ARR[@]:1}_$(date +%Y%m%d_%H%M%S).txt"
            OUTNAME=$(echo $OUTNAME | tr ' ' '_' | tr -s '_')
          else
            OUTNAME="filtered_cwe_${ARR[0]}_$(date +%Y%m%d_%H%M%S).txt"
          fi
          echo "OUTNAME=$OUTNAME" >> $GITHUB_ENV

      - name: Run CWE Filter Script (custom params)
        run: |
          python filter_cwe.py --languages "${{ github.event.inputs.languages }}" --mode "${{ github.event.inputs.mode }}" --output "$OUTNAME"

      - name: Upload filtered_cwe as artifact
        uses: actions/upload-artifact@v4
        with:
          name: ${{ env.OUTNAME }}
          path: ${{ env.OUTNAME }}

      - name: (Optional) Run tests
        run: pytest tests/
